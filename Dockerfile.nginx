FROM nginx:alpine

# Устанавливаем OpenSSL и Certbot
RUN apk add --no-cache openssl certbot

# Копируем конфигурацию Nginx
COPY nginx.conf /etc/nginx/nginx.conf

# Создаем директорию для сертификатов (если не используем самоподписанные)
RUN mkdir -p /etc/letsencrypt

# Указываем права доступа
RUN chmod 700 /etc/letsencrypt